{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "include": ["src/**/*"],
  "tstl": {
    "noImplicitSelf": true,
    "luaTarget": "5.2"
  },
  "compilerOptions": {
    "outDir": "./lua",
    "rootDir": "./src",
    "baseUrl": "./src",
    "lib": ["ESNext"],
    "target": "esnext",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "jsxFactory": "ttsUi",
    "jsxFragmentFactory": "ttsUiFragment",
    "resolveJsonModule": true,
    "types": [
      "@typed-tabletop-simulator/declaration",
      "@typed-tabletop-simulator/ui",
      "@typescript-to-lua/language-extensions"
    ],
    "strict": true,
    "sourceMap": true
  }
}
